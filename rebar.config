%% -*- erlang -*-

 {require_otp_vsn, "R16|17"}.
 {require_min_otp_vsn, "R16B"}.

 {erl_opts, [
             bin_opt_info,
            %compressed
             debug_info,
             warnings_as_errors
            ]}.

 {ct_log_dir, ".ct"}.
 {ct_extra_params, "-ct_config priv/ct/ct.config -cover priv/ct/ct.cover"}.

 {clean_files, [
                "ebin", "erl_crash.dump", ".rebar",
                ".ct", "test/*.beam"
               ]}.

 {sub_dirs, ["sub_dirs/*"]}.

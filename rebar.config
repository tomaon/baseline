%% -*- erlang -*-

{base_dir, ".rebar3"}.

{deps, [
       ]}.

{profiles, [
            {prod, [
                    {erl_opts, [
                                warnings_as_errors
                               ]}
                   ]},
            {test, [
                    {deps, [
                           ]},
                    {erl_opts, [
                                bin_opt_info,
                                %% debug_info % default
                                %% {d,'TEST'} % default
                                warn_export_all,
                                warn_export_vars,
                                warn_obsolete_guard,
                                warn_unused_import
                               ]},
                    {ct_opts, [
                               {config, "priv/ct/ct.config"},
                               {cover, "priv/ct/cover.config"}
                              ]},
                    {dialyzer, [
                                {warnings, [
                                            no_improper_lists,
                                            unmatched_returns,
                                            error_handling,
                                            race_conditions,
                                          % overspecs,
                                            underspecs,
                                          % specdiffs,
                                            unknown
                                           ]},
                                {get_warnings, true},
                                {plt_extra_apps, []},
                                {base_plt_apps, [crypto,erts,kernel,stdlib]}
                               ]}

                   ]}
           ]}.
